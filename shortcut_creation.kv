<ShortcutCreation>:
    size_hint: 1, .2
    canvas.before:
        Color:
            rgba: (1,1,0,1)
        Rectangle:
            size: self.size
    BoxLayout:
        padding: 10
        size_hint: .4, 1
        Image:
            source: root.img_src
            canvas.before:
                Color:
                    rgba: (1,1,1,1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: .4, 1
        Button:
            text: "select icon..."
            size_hint: .6, .5
            on_press: root.on_select_icon_click()
    RelativeLayout:
        size_hint: .6, 1
        canvas.before:
            Color:
                rgba: (0,0,1,1)
            Rectangle:
                size: self.size
        Button:
            text: "Create Shortcut"
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint: .5, .8
            background_color: (0, 0, 0, 1)
            background_normal: ""
            on_press: root.on_create_shortcut_click(root.parent.paths)